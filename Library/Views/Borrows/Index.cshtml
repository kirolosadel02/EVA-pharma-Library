@model IEnumerable<Library.Models.Borrow>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BorrowDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Member)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Book)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BorrowDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Member.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Book.Title)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.BorrowID" class="btn btn-warning">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.BorrowID"class="btn btn-info"    >Details</a> |
                <a asp-action="Delete" asp-route-id="@item.BorrowID" class="btn btn-danger"  >Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
