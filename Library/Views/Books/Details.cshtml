@model Library.Models.Book

@{
    ViewData["Title"] = "Book Details";
}

<div class="container">
    <h1 class="mt-4">@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card mb-4 shadow-sm">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        @if (Model.Image != null)
                        {
                            <img src="data:image/jpg;base64,@Convert.ToBase64String(Model.Image)" class="img-fluid rounded-left" alt="Book Image" style="max-height: 300px; object-fit: cover;" />
                        }
                        else
                        {
                            <img src="~/images/default-book.jpg" class="img-fluid rounded-left" alt="Default Book Image" style="max-height: 300px; object-fit: cover;" />
                        }
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h4 class="card-title">@Html.DisplayFor(model => model.Title)</h4>
                            <p class="card-text"><strong>Author: </strong>@Html.DisplayFor(model => model.Author.Name)</p>
                            <p class="card-text"><small class="text-muted">Book ID: @Model.BookID</small></p>
                            <div class="mt-4">
                                <a asp-action="Edit" asp-route-id="@Model.BookID" class="btn btn-primary">Edit</a>
                                <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
