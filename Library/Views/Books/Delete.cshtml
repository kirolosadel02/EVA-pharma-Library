@model Library.Models.Book

@{
    ViewData["Title"] = "Delete Book";
}

<div class="container">
    <h1 class="mt-4">@ViewData["Title"]</h1>

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card mb-4 shadow-sm">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="@(Model.Image != null ? $"data:image/jpeg;base64,{Convert.ToBase64String(Model.Image)}" : Url.Content("~/images/default-book.jpg"))" class="img-fluid rounded-left" alt="Book Image" style="max-height: 300px; object-fit: cover;" />
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h4 class="card-title">@Html.DisplayFor(model => model.Title)</h4>
                            <p class="card-text"><strong>Author: </strong>@Html.DisplayFor(model => model.Author.Name)</p>
                            <p class="card-text"><small class="text-muted">Book ID: @Model.BookID</small></p>
                            <h3 class="text-danger">Are you sure you want to delete this book?</h3>
                            <form asp-action="Delete">
                                <input type="hidden" asp-for="BookID" />
                                <div class="mt-4">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                    <a asp-action="Index" class="btn btn-secondary ml-2">Back to List</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
