@model IEnumerable<Library.Models.Book>

@{
    ViewData["Title"] = "Index";
}

<h1>Books</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm" style="height: 400px;">
                <img src="@(item.Image != null ? $"data:image/jpeg;base64,{Convert.ToBase64String(item.Image)}" : Url.Content("~/images/default-book.jpg"))"
                     class="card-img-top" alt="Book Image" style="height: 200px; object-fit: cover;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">@Html.DisplayFor(modelItem => item.Title)</h5>
                    <p class="card-text">
                        <strong>Author:</strong> @Html.DisplayFor(modelItem => item.Author.Name)
                    </p>
                    <div class="mt-auto">
                        <a asp-action="Edit" asp-route-id="@item.BookID" class="btn btn-warning">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.BookID" class="btn btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.BookID" class="btn btn-danger">Delete</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
