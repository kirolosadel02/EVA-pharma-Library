@{
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron text-center">
    <h1 class="display-4">Welcome to EVA Pharma's Library</h1>
    <p class="lead">Your gateway to a vast collection of pharmaceutical books</p>
    <hr class="my-4">
</div>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm" style="height: 400px;">
                <img src="@Url.Content("~/images/books.jpg")" class="card-img-top" alt="Book Image" style="height: 200px; object-fit: cover;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Books</h5>
                    <p class="card-text">Discover our extensive collection of books from various genres.</p>
                    <a href="/Books" class="btn btn-primary mt-auto">Explore</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm" style="height: 400px;">
                <img src="@Url.Content("~/images/authors.jpg")" class="card-img-top" alt="Author Image" style="height: 200px; object-fit: cover;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Authors</h5>
                    <p class="card-text">Meet the brilliant minds behind your favorite books.</p>
                    <a href="/Authors" class="btn btn-primary mt-auto">View Authors</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card mb-4 shadow-sm" style="height: 400px;">
                <img src="@Url.Content("~/images/members.jpg")" class="card-img-top" alt="Member Image" style="height: 200px; object-fit: cover;">
                <div class="card-body d-flex flex-column">
                    <h5 class="card-title">Members</h5>
                    <p class="card-text">Manage your account and borrowings seamlessly.</p>
                    <a href="/Members" class="btn btn-primary mt-auto">My Account</a>
                </div>
            </div>
        </div>
    </div>
</div>
